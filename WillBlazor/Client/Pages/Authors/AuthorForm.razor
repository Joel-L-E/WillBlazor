<EditForm Model="Author" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>First Name:</label>
        <div>
            <InputText class="form-control" @bind-Value="@Author.FirstName" />
            <ValidationMessage For="@(() => Author.FirstName)" />
        </div>
    </div>
    <div class="form-group">
        <label>Last Name:</label>
        <div>
            <InputText class="form-control" @bind-Value="@Author.LastName" />
            <ValidationMessage For="(() => Author.LastName)" />
        </div>
    </div>
    <div class="form-group">
        <label>Hometown City:</label>
        <div>
            <InputText class="form-control" @bind-Value="@Author.HometownCity" />
            <ValidationMessage For="(() => Author.HometownCity)" />
        </div>
    </div>
    <div class="form-group">
        <label>Hometown State:</label>
        <div>
            <InputText class="form-control" @bind-Value="@Author.HometownState" />
            <ValidationMessage For="(() => Author.HometownState)" />
        </div>
    </div>

    <button class="btn btn-success" type="submit">Save Changes</button>
</EditForm>

@code {
    [Parameter] public Author Author { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }

}
